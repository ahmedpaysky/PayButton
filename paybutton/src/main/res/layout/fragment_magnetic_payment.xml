<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.paysky.ui.fragment.magnetic.MagneticPaymentFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="TODO"
        android:scaleType="centerInside"
        android:src="@drawable/bg_swipe_card" />

    <Button
        android:id="@+id/manual_payment"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_gray1"
        android:text="@string/enter_manual" />

    <Button
        android:id="@+id/qr_payment"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_gray1"
        android:text="@string/read_qr"
        android:visibility="gone" />


</LinearLayout>
