<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title_textView"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00A7F6"
            android:gravity="center"
            android:textColor="@android:color/white"
            tools:text="test color" />

        <TextView
            android:id="@+id/dialog_content_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="120dp"
            android:padding="12dp"
            android:textColor="#2D3134"
            tools:text="dialog content" />

        <Button
            android:id="@+id/dialog_button"
            style="@style/buttonStyle"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/baybutton_proceed_button"
            tools:text="OK" />

    </LinearLayout>
</RelativeLayout>